<h5 class="card-title fw-semibold mb-4">Tabel Trip</h5>
<div class="table-responsive">
  <table class="table text-nowrap mb-0 align-middle">
    <thead class="text-dark fs-4">
      <tr>
        <th class="border-bottom-0">
          <h6 class="fw-semibold mb-0">Id Trip</h6>
        </th>
        <th class="border-bottom-0">
          <h6 class="fw-semibold mb-0">Id Transaksi</h6>
        </th>
        <th class="border-bottom-0">
          <h6 class="fw-semibold mb-0">Harga</h6>
        </th>
        <th class="border-bottom-0">
          <h6 class="fw-semibold mb-0">Kedaluarsa</h6>
        </th>
        <th class="border-bottom-0">
          <h6 class="fw-semibold mb-0">Bank</h6>
        </th>
        <th class="border-bottom-0">
          <h6 class="fw-semibold mb-0">Nomor VA</h6>
        </th>
        <th class="border-bottom-0">
          <h6 class="fw-semibold mb-0">Status</h6>
        </th>
      </tr>
    </thead>
    <tbody>
      <% trips.forEach(trip=> { %>
      <% if (trip && trip.created_at) { %>
      <tr>
        <td class="border-bottom-0">
          <h6 class="fw-semibold mb-0">
            <%= trip.id %>
          </h6>
        </td>
        <td class="border-bottom-0">
          <h6 class="fw-semibold mb-1">
            <%= trip.payment.transaction_id %>
          </h6>
        </td>
        <td class="border-bottom-0">
          <h6 class="fw-bold mb-1">
            Rp<%= trip.payment.price %>,00
          </h6>
        </td>
        <td class="border-bottom-0">
          <h6 class="fw-semibold mb-1">
            <%= new Date(trip.payment.expiration).toLocaleDateString() %>
          </h6>
        </td>
        <td class="border-bottom-0">
          <h6 class="fw-semibold mb-1">
            <%= trip.payment.bank %>
          </h6>
        </td>
        <td class="border-bottom-0">
          <h6 class="fw-semibold mb-1">
            <%= trip.payment.va_number %>
          </h6>
        </td>
        <td class="border-bottom-0">
          <div class="d-flex align-items-center gap-2">
            <span class="badge 
                                    <% if (trip.payment.status === 'cancel') { %>
                                        bg-danger
                                    <% } else if (trip.payment.status === 'pending') { %>
                                        bg-warning
                                    <% } else if (trip.payment.status === 'settlement') { %>
                                        bg-success 
                                    <% } %> 
                                        rounded-3 fw-semibold">
              <%= trip.payment.status %>
            </span>
          </div>
        </td>
      </tr>
      <% } %>
      <% }) %>
    </tbody>
  </table>
</div>